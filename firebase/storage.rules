// ============================================
// UNISYNC STORAGE SECURITY RULES
// ============================================
// Last Updated: December 2024
// 
// Security Features:
// 1. Authentication required for all operations
// 2. File size limits to prevent abuse
// 3. File type restrictions (only images/videos)
// 4. User-specific upload folders
// 5. Path-based access control
// ============================================

service firebase.storage {
  match /b/{bucket}/o {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if email is verified
    function isEmailVerified() {
      return request.auth.token.email_verified == true;
    }
    
    // Check if user has CvSU email
    function hasCvsuEmail() {
      return request.auth.token.email.matches('.*@cvsu[.]edu[.]ph$');
    }
    
    // Full authentication check
    function isFullyAuthenticated() {
      return isAuthenticated() && isEmailVerified();
    }
    
    // ==========================================
    // FILE VALIDATION FUNCTIONS
    // ==========================================
    
    // Check file size - max 10MB for images
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Check file size - max 50MB for videos
    function isValidVideoSize() {
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // Check file size - max 5MB for profile pictures
    function isValidProfilePicSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Check if file is an allowed image type
    function isImage() {
      return request.resource.contentType.matches('image/(jpeg|jpg|png|gif|webp)');
    }
    
    // Check if file is an allowed video type
    function isVideo() {
      return request.resource.contentType.matches('video/(mp4|webm|mov|avi)');
    }
    
    // Check if file is a PDF (for documents)
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // Validate file name (no path traversal attacks)
    function isValidFileName(fileName) {
      return fileName.size() > 0 
        && fileName.size() < 256
        && !fileName.matches('.*[/\\\\].*')
        && !fileName.matches('^\\..*');
    }
    
    // ==========================================
    // ANNOUNCEMENT MEDIA
    // ==========================================
    match /announcements/{announcementId}/{fileName} {
      // Read: Any authenticated user
      allow read: if isFullyAuthenticated();
      
      // Create: Authenticated users with validation
      allow create: if isFullyAuthenticated()
        && isValidFileName(fileName)
        && ((isImage() && isValidImageSize()) || (isVideo() && isValidVideoSize()));
      
      // Update: Not allowed - must delete and re-upload
      allow update: if false;
      
      // Delete: Only authenticated users (ideally should check ownership via Firestore)
      allow delete: if isFullyAuthenticated();
    }
    
    // ==========================================
    // USER PROFILE PICTURES
    // ==========================================
    match /profiles/{userId}/{fileName} {
      // Read: Any authenticated user
      allow read: if isFullyAuthenticated();
      
      // Create: Only to own folder, with validation
      allow create: if isFullyAuthenticated()
        && request.auth.uid == userId
        && isValidFileName(fileName)
        && isImage()
        && isValidProfilePicSize();
      
      // Update: Only own profile picture
      allow update: if isFullyAuthenticated()
        && request.auth.uid == userId
        && isImage()
        && isValidProfilePicSize();
      
      // Delete: Only own profile pictures
      allow delete: if isFullyAuthenticated() && request.auth.uid == userId;
    }
    
    // ==========================================
    // USER UPLOADS (General files)
    // ==========================================
    match /uploads/{userId}/{fileName} {
      // Read: Any authenticated user
      allow read: if isFullyAuthenticated();
      
      // Create: Only to own folder
      allow create: if isFullyAuthenticated()
        && request.auth.uid == userId
        && isValidFileName(fileName)
        && ((isImage() && isValidImageSize()) || (isVideo() && isValidVideoSize()));
      
      // Update: Not allowed
      allow update: if false;
      
      // Delete: Only own uploads
      allow delete: if isFullyAuthenticated() && request.auth.uid == userId;
    }
    
    // ==========================================
    // SCHEDULE DOCUMENTS (PDF uploads)
    // ==========================================
    match /schedules/{userId}/{fileName} {
      // Read: Owner or faculty+
      // Note: Can't check Firestore roles from Storage, so allow all authenticated
      allow read: if isFullyAuthenticated();
      
      // Create: Only to own folder, PDF only
      allow create: if isFullyAuthenticated()
        && request.auth.uid == userId
        && isValidFileName(fileName)
        && isPDF()
        && request.resource.size < 10 * 1024 * 1024; // 10MB max for PDFs
      
      // Update: Not allowed
      allow update: if false;
      
      // Delete: Only own files
      allow delete: if isFullyAuthenticated() && request.auth.uid == userId;
    }
    
    // ==========================================
    // FACULTY REQUEST ID PHOTOS
    // ==========================================
    match /faculty_requests/{fileName} {
      // Read: Authenticated users (admins will need to view)
      allow read: if isFullyAuthenticated();
      
      // Create: Any authenticated user can upload their ID
      allow create: if isFullyAuthenticated()
        && isValidFileName(fileName)
        && isImage()
        && request.resource.size < 5 * 1024 * 1024; // 5MB max
      
      // Update: Not allowed
      allow update: if false;
      
      // Delete: Not allowed (admin may need evidence)
      allow delete: if false;
    }
    
    // ==========================================
    // CATCH-ALL: Deny everything else
    // ==========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
